<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.duclinh1610.android_sqlite.activity.SQLiteActivity"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="@string/value_name"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:id="@+id/et_name"
                android:ems="13"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/value_address"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:id="@+id/et_address"
                android:ems="13"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="@string/value_phone_number"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:id="@+id/et_phone_number"
                android:ems="13"
                android:layout_marginLeft="10dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="@string/value_add"
                android:layout_span="2"
                android:id="@+id/btn_add"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvData">
        </ListView>
    </LinearLayout>
</LinearLayout>
